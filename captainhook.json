{
    "config": {
        "run-mode": "docker",
        "run-exec": ". ./.env.local && docker exec -u $(id -u `whoami`):$(id -g `whoami`) -i ${PWD##*/}-php-1"
    },
    "commit-msg": {
        "enabled": false,
        "actions": []
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": []
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\Composer\\Action\\CheckLockFile",
                "options": []
            },
            {
                "action": "vendor/bin/phpmd {$STAGED_FILES|of-type:php|separated-by:,} text phpmd.ruleset.xml --exclude src/Resources,tests,migrations,src/Infrastructure/DB/Fixtures",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
                        "args": [
                            ["*.php"]
                        ]
                    }
                ]
            },
            {
                "action": "vendor/bin/phpunit --group='Unit'",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
                        "args": [
                            ["*.php"]
                        ]
                    }
                ]
            },
            {
                "action": "./vendor/bin/infection",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
                        "args": [
                            ["*.php"]
                        ]
                    }
                ]
            },
            {
                "action": "vendor/bin/phpstan analyse -c phpstan.neon.dist {$STAGED_FILES|of-type:php|separated-by: } --memory-limit 1G",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
                        "args": [
                            ["*.php"]
                        ]
                    }
                ]
            },
            {
                "action": "vendor/bin/php-cs-fixer fix {$STAGED_FILES|of-type:php} --config .php-cs-fixer.dist.php",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
                        "args": [
                            ["*.php"]
                        ]
                    }
                ]
            },
            {
                "action": "git update-index --again",
                "options": []
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\PrepareConventionalCommit"
            }
        ]
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": false,
        "actions": []
    }
}
